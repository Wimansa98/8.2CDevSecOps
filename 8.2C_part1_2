pipeline{ 
  agent any 
  stages { 
    stage('Checkout') { 
      steps { 
        git branch: 'main', url: ' https://github.com/Wimansa98/8.2CDevSecOps.git' 
      } 
    } 
 
    stage('Install Dependencies') { 
      steps { 
        bat 'npm install' 
      } 
    } 
 
    stage('Run Tests') { 
      steps { 
        bat 'npm test || exit /b 0' // Allows pipeline to continue despite test failures 
      } 
      post{
        always{
          emailext([
            mail to: "wimansadr@gmail.com",
            subject : "Build Status: ${currentBuild.currentResult}",
            body: "The tests have completed. Status: ${currentBuild.currentResults}",
            attachmentsPattern: '**/*.log'
          ])
        }
      }
    } 
 
    stage('Generate Coverage Report') { 
      steps { 
        // Ensure coverage report exists 
        bat 'npm run coverage || exit /b 0' 
      } 
    } 
 
    stage('NPM Audit (Security Scan)') { 
      steps { 
        bat 'npm audit || exit /b 0' // This will show known CVEs in the output 
      } 
      post{
        always{
          emailext([
            mail to: "wimansadr@gmail.com",
            subject : "Security Scan Status: ${currentBuild.currentResult}",
            body: "The security scan has completed. Status: ${currentBuild.currentResults}",
            attachmentsPattern: '**/*.log'
          ])
        }
      }
    } 
  } 
}
